  "repository": {
    "type": "git"
  },
  "dependencies": {
    "@fastify/env": "^5.0.1",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.1.0",
    "@google-cloud/pubsub": "^4.9.0",
    "@kovai-pazhamudir-nilayam/kpn-platform-token": "^1.1.5",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
    "ajv-keywords": "^5.1.0",
    "axios": "^1.7.7",
    "dinero.js": "^1.9.1",
    "env-schema": "^6.0.0",
    "fastify": "^5.1.0",
    "fastify-healthcheck": "^5.1.0",
    "fastify-metrics": "^12.1.0",
    "http-status-codes": "^2.3.0",
    "knex": "^3.1.0",
    "moment": "^2.30.1",
    "object-mapper": "^6.2.0",
    "pg": "^8.13.1",
    "pino": "^9.5.0",
    "uuid": "^11.0.3"
  },
  "engines": {
    "node": ">=20.*"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^11.1.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "pino-pretty": "^13.0.0",
    "prettier": "^2.8.8"
  },
  "eslintIgnore": [
    "node_modules/*",
    "coverage/*",
    ".nyc_output/*"
  ],
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "scripts": {
    "lint": "eslint . -c .eslintrc.json --ext js --fix",
    "lint:fix": "npm run lint -- --fix",
    "start:dev": "NODE_ENV=development nodemon -e js index | pino-pretty -c -t -l severity",
    "start": "node --max-http-header-size 24000 src/index",
    "test": "echo \"Run Tests\" && exit 0",
    "test:unit": "LOG_LEVEL=silent jest -c jest.config.unit.js",
    "knex": "node -r dotenv/config ./node_modules/.bin/knex",
    "migrate:make": "npm run knex -- migrate:make --knexfile ./config/knexConfig.js",
    "migrate": "npm run knex -- migrate:latest --knexfile ./config/knexConfig.js",
    "migrate:down": "npm run knex -- migrate:down --knexfile ./config/knexConfig.js",
    "seed": "npm run knex -- seed:run --knexfile ./config/knexConfig.js",
    "prepare": "husky install"
  }
}